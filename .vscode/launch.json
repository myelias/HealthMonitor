    "version": "0.2.0",
    "configurations": [
        {
            "name": "HeartRateService",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/FitbitHeartRateDataService/bin/Debug/net8.0/FitbitHeartRateDataService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/FitbitHeartRateDataService",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "SearchService",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/SearchService/bin/Debug/net8.0/SearchService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SearchService",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "compounds": [
        {
          "name": "Heart Rate and SearchService",
          "configurations": [
            "HeartRateService",
            "SearchService"
          ],
          "stopAll": true
        }
      ]
}